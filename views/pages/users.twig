{% extends 'layout/base.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block content %}
    <div class="wrapper text-white">
        <h1 class="mt-5">Liste des Utilisateurs ðŸ“‹</h1>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">Nom d'utilisateur</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td class="text-center">
                            <img src="/avatar/{{ user._id }}" alt="{{ user.username }}" width="50">
                            {{ user.username }}
                        </td>
                        <td>{{ user.email }}</td>
                        <td class="gy-2">
                            <a href="/edit/{{ user._id }}" class="btn btn-warning mt-0 ">Modifier</a>
                            <a href="/delete/{{ user._id }}" class="btn btn-danger mt-0">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
